{
  "schemaVersion": 2,
  "dockerfileLines": [
    "FROM node:16-alpine",
    "WORKDIR /usr/src/app",
    "COPY package*.json ./",
    "RUN npm install --only=production",
    "COPY . .",
    "RUN npm run build",
    "RUN npm run start",
    "FROM nginx:alpine",
    "COPY --from=0 /usr/src/app/out /usr/share/nginx/html",
    "EXPOSE 80",
    "CMD [\"nginx\", \"-g\", \"daemon off;\"]"
  ]
}
